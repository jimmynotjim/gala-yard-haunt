# Pi-Thon Environment Configuration
# Copy this file to .env and update with your values

# GPIO Pin Configuration
LED_PIN=17
BUTTON_PIN=23
SENSOR_PIN=24

# PWM Configuration
PWM_PIN=18
PWM_FREQUENCY=1000

# Application Settings
DEBUG=false
LOG_LEVEL=INFO

# API Keys (if using external services)
# WEATHER_API_KEY=your_key_here
# MQTT_BROKER=mqtt.example.com
# MQTT_PORT=1883
# MQTT_USERNAME=
# MQTT_PASSWORD=

# I2C Device Addresses (in hex)
# I2C_DISPLAY_ADDR=0x3C
# I2C_SENSOR_ADDR=0x76

# Camera Settings
# CAMERA_RESOLUTION_WIDTH=1920
# CAMERA_RESOLUTION_HEIGHT=1080
# CAMERA_FRAMERATE=30

# Network Settings
# DEVICE_NAME=pi-thon-device
# HOST=0.0.0.0
# PORT=5000
